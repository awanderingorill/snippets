<h3>add a snippet</h3>

<div id="error">
  <%=flash[:error]%>
</div>

<div id="notice">
  <%=flash[:notice]%>
</div>

<%= form_for @snippet do |f| %>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.label :notes %><br>
  <%= f.text_field :notes %><br>
  <%= f.label :source %><br>
  <%= f.text_field :source %><br>
  <%= f.label :tag_list %><br>
  <%= f.text_field :tag_list %><br>
  <%= f.submit "Add" %>
<% end %>