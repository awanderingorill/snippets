<!DOCTYPE html>
<html>
<head>
  <title>SnippetsApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <h1><%= link_to 'Snippets', '/snippets/new' %></h2>

  <nav align="right">
    <% if session[:user_id] %>
      <% @user = User.find(session[:user_id]) %>
      logged in as <%= link_to(@user.email, "/users/#{@user.id}")  %> | <%= link_to('Log out', '/logout') %>
    <% else %>
      <%= link_to('Log in', '/login') %> | <%= link_to('Sign up', '/users/new') %>
    <% end %>
  </nav>

  <%= yield %>

</body>
</html>
